#include <bits/stdc++.h> 
class Node{
    public:
    int data;
    Node* next;
    
    Node(int d){
        data=d;
        next=NULL;
    }
};
class Queue {
    Node* qfront=NULL;
    Node* rear=NULL;
public:
    Queue() {
        // Implement the Constructor
    }

    /*----------------- Public Functions of Queue -----------------*/

    bool isEmpty() {
        // Implement the isEmpty() function
        if(qfront==NULL && rear==NULL)
        {
            return true;
        }
        else{
            return false;
        }
    }

    void enqueue(int data) {
        // Implement the enqueue() function
        Node* temp=new Node(data);
        if(qfront==NULL)
        {
            qfront=temp;
            rear=temp;
            return;
        }
        rear->next=temp;
        rear=temp;
        
    }

    int dequeue() {
        // Implement the dequeue() function
        if(qfront==NULL)
        {
            return -1;
        }
        else{
            Node* temp=qfront;
            qfront=qfront->next;
            if(qfront==NULL)
            {
                rear=NULL;
            }
            int deq=temp->data;
            delete(temp);
            return deq;
        }
    }

    int front() {
        // Implement the front() function
        if(qfront==NULL)
        {
            return -1;
        }
        else{
            return qfront->data;
        }
    }
};
