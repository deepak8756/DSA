






-----------------------------------------------------------------------------------------------------------------------------------------------------------
int Solution::diffPossible(vector<int> &A, int B) {
    int i=0;
    int j=1;
    
    int n=A.size();
   
    while(j<n)
    {
        int diff=A[j]-A[i];
        if(diff==B && i!=j)
        {
            return 1;
        }
        else if(diff<B)
        {
            j++;
        }
        else{
            i++;
        }
    }
    
    return false;
}
