//human class  protected hai aur mode of inheritance bhi PROTECTED HAI hai to public hoga

#include<bits/stdc++.h>
using namespace std;

class Human{
    protected:
    int weight;

    public:
    int height;
    int age;

    int getweight(){
        return this->weight;
    }

    void setweight(int h){
        this->weight=h;
    }
};

class Male:protected Human{

    public:

    int getweight(){
        return this->weight;
    }
};

int main()
{
    Male m1;
    cout<<m1.getweight()<<endl;

    return 0;
}

//-------------------------------------------------------

//human class Protected rhegi ab aur mode of inherit private rhega

#include<bits/stdc++.h>
using namespace std;

class Human{
    protected:
    int age;
    int weight;
    int height;

    public:

    int getage(){
        return this->age;
    }

    void setage(int a){
        this->age=a;
    }
};

class Male:private Human{

    public:
    int getage(){
        return this->age;
    }
};

int main()
{
    Male m1;
    cout<<m1.getage();
    return 0;
}

